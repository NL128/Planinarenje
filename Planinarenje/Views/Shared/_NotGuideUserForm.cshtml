@model Planinarenje.Models.ClientInputs.NotGuideUserData


<form id="NotGuideFormId9200">

    @if (Model.UserError != null)
    {
        <label class="alert-danger">@Model.UserError.Message</label>
    }
    <div class="row mt-5 align-items-center">

        <div class="col-md-3 text-center mb-5">
            <div class="avatar avatar-xl">

                @{
                    string path = "Users/Img/" + Model.ImageName;
                    Html.RenderPartial("_UploadPicture", new Planinarenje.Models.ImagePathInput() { ImagePath = path });
                }

            </div>
        </div>
        <div class="col">
            <div class="row align-items-center">
                <div class="col-md-7">
                    <h4 class="mb-1">@Model.GetFullName() </h4>
                    <p class="small mb-3"><span class="badge badge-dark">Address not defined</span></p>
                </div>
            </div>
            <div class="row mb-4">
                <div class="col-md-7">

                </div>
                <div class="col">

                </div>
            </div>
        </div>
    </div>
    <hr class="my-4" />
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="firstname">Firstname</label>
            <input type="text" id="firstname" class="form-control" placeholder="First Name" value="@Model.FirstName" />
        </div>
        <div class="form-group col-md-6">
            <label for="lastname">Lastname</label>
            <input type="text" id="lastname" class="form-control" placeholder="Last Name" value="@Model.LastName" />
        </div>
    </div>
    <div class="form-group">
        <label for="inputEmail4">Email</label>
        <input type="email" class="form-control" id="inputEmail4" placeholder="Email" value="@Model.Email" />
    </div>
    <div class="form-group">

        <label for="inputAddress5">Mobile</label>
        <input type="tel" class="form-control" id="inputAddress5" placeholder="Input Mobile" value="@Model.Phone" />
    </div>



    <div class="form-group">

        <label> This area will be visible only for guide members !</label>

    </div>



    <button type="button" class="btn btn-primary" onclick="UpdateNotGuideUser()">Save Change</button>

</form>
