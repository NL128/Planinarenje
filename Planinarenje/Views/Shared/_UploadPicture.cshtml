@model  Planinarenje.Models.ImagePathInput
<link href="~/Theme/UploadPicure.css" rel="stylesheet" />




<div class="container">
    <div class="picture-container">
        <div class="picture">
            <img src="~/@Model.ImagePath" class="picture-src avatar-img" alt="Avatar Image" id="wizardPicturePreview" title="">
            <input type="file" id="wizard-picture" class="" accept=".jpg,.jpeg,.png">
        </div>
        <h6 class="">Choose Picture</h6>
    </div>
</div>



